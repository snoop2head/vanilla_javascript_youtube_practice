extends layouts/main

block content
    .form-container
        form(action=routes.join, method="post")
            input(type="email", name="email", placeholder="write email here")
            input(type="password", name="password", placeholder="write password here")
            input(type="password", name="confirmPassword", placeholder="verify password")
            input(type="submit", value="Join Now!")
        include partials/socialLogin